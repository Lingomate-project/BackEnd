}

datasource db {
     provider = "mysql"
     url      = env("DATABASE_URL")
   }

// Core models {Tables} for the Conversation app
//--------------------------------------------------------------------------------

// 1. User Table
model User {
  id            Int      @id @default(autoincrement()) @map("user_id")
  auth0Sub      String   @unique @map("auth0_sub") 
  username      String   @db.VarChar(100)
  email         String?  @unique @db.VarChar(255)
  avatarUrl     String?  @map("avatar_url")
  
  // --- NEW SETTINGS (Based on your UI Image) ---
  // Defaults can be changed later
  countryPref   String   @default("United States") @map("country_pref") // e.g., 'United States', 'United Kingdom', 'Australia'
  stylePref     String   @default("Casual English") @map("style_pref")   // e.g., 'Formal English', 'Casual English'
  genderPref    String   @default("Female Tone") @map("gender_pref")     // e.g., 'Female Tone', 'Male Tone'
  
  role          Role     @default(USER)
  createdAt     DateTime @default(now()) @map("created_at") @db.Timestamp(0)
  
  conversations Conversation[]
  stats         UserStat?
  subscription  Subscription?
  payments      Payment[]

  @@map("User")
}

// 2. User Statistics (New: For Dashboard/MyPage)
model UserStat {
  id             Int       @id @default(autoincrement())
  userId         Int       @unique @map("user_id")
  totalSentences Int       @default(0) @map("total_sentences")
  totalTimeMins  Int       @default(0) @map("total_time_mins")
  studyStreak    Int       @default(0) @map("study_streak")
  lastStudyDate  DateTime? @map("last_study_date")

  user           User      @relation(fields: [userId], references: [id], onDelete: Cascade)
  @@map("UserStat")
}

// 3. Subscription & Payments
model Subscription {
  id        Int       @id @default(autoincrement())
  userId    Int       @unique @map("user_id")
  planName  String    @default("Free") // 'Free', 'Premium'
  isActive  Boolean   @default(true)
  expiresAt DateTime? @map("expires_at")

  user      User      @relation(fields: [userId], references: [id], onDelete: Cascade)
  @@map("Subscription")
}

model Payment {
  id            Int      @id @default(autoincrement())
  userId        Int      @map("user_id")
  amount        Float
  currency      String   @default("KRW")
  status        String   // 'PENDING', 'SUCCESS', 'FAILED'
  platform      String   @default("GOOGLE_PLAY") // 'KAKAO', 'GOOGLE_PLAY'
  
  // [NEW] Google Play Fields
  purchaseToken String?  @db.Text // Google tokens are very long
  orderId       String?  @db.VarChar(255)
  productId     String?  @db.VarChar(100) // e.g., 'com.lingomate.premium_monthly'

  createdAt     DateTime @default(now())

  user          User     @relation(fields: [userId], references: [id])
  @@map("Payment")
}


enum Role {
  USER
  PREMIUM
}

// 4. Conversation (Updated for Free Talking)
// We removed 'topicId' and added the specific settings for this session
model Conversation {
  id           Int       @id @default(autoincrement()) @map("conversation_id")
  userId       Int       @map("user_id")
  
  // Snapshot of settings used for this chat
  countryUsed  String    @map("country_used") // e.g. 'United States'
  styleUsed    String    @map("style_used")   // e.g. 'Formal'
  genderUsed   String    @map("gender_used")  // e.g. 'Female'

  startedAt    DateTime  @default(now()) @map("started_at") @db.Timestamp(0)
  endedAt      DateTime? @map("ended_at") @db.Timestamp(0)

  user     User      @relation(fields: [userId], references: [id], onDelete: Cascade)
  messages Message[]

  @@index([userId])
  @@map("Conversation")
}

// 5. Message (Chat Transcript + AI Feedback)
model Message {
  id             Int           @id @default(autoincrement()) @map("message_id")
  conversationId Int           @map("conversation_id")
  sender         MessageSender @default(USER)
  content        String        @db.Text
  timestamp      DateTime      @default(now()) @db.Timestamp(0)

  // AI Feedback Fields (New: For "Review" screen)
  correction     String?       @db.Text // The corrected sentence from AI
  explanation    String?       @db.Text // Grammar explanation
  isBookmarked   Boolean       @default(false) // If user wants to save this expression

  conversation Conversation @relation(fields: [conversationId], references: [id], onDelete: Cascade)

  @@index([conversationId]) 
  @@map("Message")
}

enum MessageSender {
  USER
  AI
}