generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

// 1. User Table
model User {
  id            Int      @id @default(autoincrement()) @map("user_id")
  auth0Sub      String   @unique @map("auth0_sub") 
  username      String   @db.VarChar(100)
  email         String?  @unique @db.VarChar(255)
  avatarUrl     String?  @map("avatar_url")
  
  // Settings (v2.1 defaults)
  countryPref   String   @default("us") @map("country_pref") 
  stylePref     String   @default("casual") @map("style_pref")   
  genderPref    String   @default("female") @map("gender_pref")     
  
  role          Role     @default(USER)
  createdAt     DateTime @default(now()) @map("created_at") @db.Timestamp(0)
  
  conversations Conversation[]
  stats         UserStat?
  subscription  Subscription?
  payments      Payment[]

  @@map("User")
}

// 2. User Statistics
model UserStat {
  id             Int       @id @default(autoincrement())
  userId         Int       @unique @map("user_id")
  totalSentences Int       @default(0) @map("total_sentences")
  totalTimeMins  Int       @default(0) @map("total_time_mins")
  studyStreak    Int       @default(0) @map("study_streak")
  lastStudyDate  DateTime? @map("last_study_date")

  user           User      @relation(fields: [userId], references: [id], onDelete: Cascade)
  @@map("UserStat")
}

// 3. Subscription
model Subscription {
  id        Int       @id @default(autoincrement())
  userId    Int       @unique @map("user_id")
  planName  String    @default("free")
  isActive  Boolean   @default(true)
  expiresAt DateTime? @map("expires_at")

  user      User      @relation(fields: [userId], references: [id], onDelete: Cascade)
  @@map("Subscription")
}

// Payment History
model Payment {
  id            Int      @id @default(autoincrement())
  userId        Int      @map("user_id")
  amount        Float
  currency      String   @default("KRW")
  status        String
  platform      String   @default("GOOGLE_PLAY")
  purchaseToken String?  @db.Text
  orderId       String?  @db.VarChar(255)
  productId     String?  @db.VarChar(100)
  createdAt     DateTime @default(now())

  user          User     @relation(fields: [userId], references: [id])
  @@map("Payment")
}

enum Role {
  USER
  PREMIUM
}

// 4. Conversation (Consolidated & Updated for v2.1)
model Conversation {
  id           Int       @id @default(autoincrement()) @map("conversation_id")
  userId       Int       @map("user_id")
  
  // Snapshot settings used for this specific chat
  countryUsed  String    @map("country_used") 
  styleUsed    String    @map("style_used")   
  genderUsed   String    @map("gender_used")  

  startedAt    DateTime  @default(now()) @map("started_at") @db.Timestamp(0)
  
  // [NEW v2.1] Tracks when the chat was finished/uploaded
  finishedAt   DateTime? @map("finished_at") @db.Timestamp(0)

  user     User      @relation(fields: [userId], references: [id], onDelete: Cascade)
  messages Message[]

  @@index([userId])
  @@map("Conversation")
}

// 5. Message (Script)
model Message {
  id             Int           @id @default(autoincrement()) @map("message_id")
  conversationId Int           @map("conversation_id")
  sender         MessageSender @default(USER) // 'user' or 'ai'
  content        String        @db.Text
  
  createdAt      DateTime      @default(now()) @db.Timestamp(0)

  // Optional fields for future features (bookmarking, corrections)
  correction     String?       @db.Text
  explanation    String?       @db.Text
  isBookmarked   Boolean       @default(false)

  conversation Conversation @relation(fields: [conversationId], references: [id], onDelete: Cascade)

  @@index([conversationId]) 
  @@map("Message")
}

enum MessageSender {
  USER
  AI
}