datasource db {
     provider = "mysql"
     url      = env("DATABASE_URL")
   }

// Core models {Tables} for the Conversation app
//--------------------------------------------------------------------------------

//1. User Table {Authentication and Profile}
model User {
  id             Int      @id @default(autoincrement()) @map("user_id")
  auth0Sub       String   @unique @map("auth0_sub") 
  username       String   @db.VarChar(100) 
  languagePref   String?  @default("ko") @map("language_pref") @db.VarChar(10)
  voiceSetting   String?  @default("Kore") @map("voice_setting") @db.VarChar(50)
  role           Role     @default(USER)
  createdAt      DateTime @default(now()) @map("created_at") @db.Timestamp(0)
  conversations  Conversation[]
  @@map("User")
}

// ENUM for User Role
enum Role {
  USER
  PREMIUM
}


//2. Topic Table {Conversation Scenarios}
model Topic {
 // Fields
  id              Int       @id @default(autoincrement()) @map("topic_id")
  titleJp         String    @map("title_jp") @db.VarChar(255) // Japanese title for display
  titleEn         String    @map("title_en") @db.VarChar(255) // English title for display
  startPrompt     String    @map("start_prompt") @db.Text     // Detailed instruction for the AI (system prompt)
  category        String?   @db.VarChar(50)                    // e.g., 'Travel', 'Business'

  // Relationships
  conversations   Conversation[]

  @@map("Topic")
}

// 3. Conversation Table (Tracks a single chat session)
model Conversation {
  // Fields
  id              Int       @id @default(autoincrement()) @map("conversation_id")
  userId          Int       @map("user_id")
  topicId         Int       @map("topic_id")
  languageUsed    String    @map("language_used") @db.VarChar(5) // Language used in this specific chat (e.g., 'en')
  startedAt       DateTime  @default(now()) @map("started_at") @db.Timestamp(0)
  endedAt         DateTime? @map("ended_at") @db.Timestamp(0)    // Null if the chat is still active

  // Relationships
  user            User      @relation(fields: [userId], references: [id], onDelete: Cascade)
  topic           Topic     @relation(fields: [topicId], references: [id])
  messages        Message[] // All messages belonging to this session

  @@map("Conversation")
}

// 4. Message Table (The chat transcript lines)
model Message {
  // Fields
  id              Int           @id @default(autoincrement()) @map("message_id")
  conversationId  Int           @map("conversation_id")
  sender          MessageSender @default(USER) // 'user' or 'ai'
  content         String        @db.Text
  timestamp       DateTime      @default(now()) @db.Timestamp(0)

  // Relationships
  conversation    Conversation  @relation(fields: [conversationId], references: [id], onDelete: Cascade)

  @@map("Message")
}

// ENUM for Message Sender
enum MessageSender {
  USER
  AI
}