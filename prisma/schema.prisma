}

datasource db {
     provider = "mysql"
     url      = env("DATABASE_URL")
   }

// Core models {Tables} for the Conversation app
//--------------------------------------------------------------------------------

// 1. User Table {Authentication and Profile}
model User {
  id            Int      @id @default(autoincrement()) @map("user_id")
  auth0Sub      String   @unique @map("auth0_sub") 
  username      String   @db.VarChar(100)
  email         String?  @unique @db.VarChar(255) // New: For Profile
  avatarUrl     String?  @map("avatar_url")       // New: For Profile Image
  languagePref  String?  @default("ko") @map("language_pref") @db.VarChar(10)
  
  // Settings (from Design)
  voiceSetting  String?  @default("Kore") @map("voice_setting") @db.VarChar(50)
  toneSetting   String?  @default("casual") @map("tone_setting") // 'casual' or 'formal'
  
  role          Role     @default(USER)
  createdAt     DateTime @default(now()) @map("created_at") @db.Timestamp(0)
  
  // Relationships
  conversations Conversation[]
  stats         UserStat?      // New: 1-to-1 relation for Dashboard
  subscription  Subscription?  // New: 1-to-1 relation for Premium
  payments      Payment[]

  @@map("User")
}

// 2. User Statistics (New: For Dashboard/MyPage)
model UserStat {
  id             Int       @id @default(autoincrement())
  userId         Int       @unique @map("user_id")
  totalSentences Int       @default(0) @map("total_sentences")
  totalTimeMins  Int       @default(0) @map("total_time_mins")
  studyStreak    Int       @default(0) @map("study_streak")
  lastStudyDate  DateTime? @map("last_study_date")

  user           User      @relation(fields: [userId], references: [id], onDelete: Cascade)
  @@map("UserStat")
}

// 3. Subscription & Payments
model Subscription {
  id        Int       @id @default(autoincrement())
  userId    Int       @unique @map("user_id")
  planName  String    @default("Free") // 'Free', 'Premium'
  isActive  Boolean   @default(true)
  expiresAt DateTime? @map("expires_at")

  user      User      @relation(fields: [userId], references: [id], onDelete: Cascade)
  @@map("Subscription")
}

model Payment {
  id            Int      @id @default(autoincrement())
  userId        Int      @map("user_id")
  amount        Float
  currency      String   @default("KRW")
  status        String   // 'PENDING', 'SUCCESS', 'FAILED'
  platform      String   @default("GOOGLE_PLAY") // 'KAKAO', 'GOOGLE_PLAY'
  
  // [NEW] Google Play Fields
  purchaseToken String?  @db.Text // Google tokens are very long
  orderId       String?  @db.VarChar(255)
  productId     String?  @db.VarChar(100) // e.g., 'com.lingomate.premium_monthly'

  createdAt     DateTime @default(now())

  user          User     @relation(fields: [userId], references: [id])
  @@map("Payment")
}

model Payment {
  id        Int      @id @default(autoincrement())
  userId    Int      @map("user_id")
  amount    Float
  currency  String   @default("KRW")
  status    String   // 'PENDING', 'SUCCESS', 'FAILED'
  createdAt DateTime @default(now())

  user      User     @relation(fields: [userId], references: [id])
  @@map("Payment")
}

enum Role {
  USER
  PREMIUM
}

// 4. Topic (Conversation Scenarios)
model Topic {
  id          Int      @id @default(autoincrement()) @map("topic_id")
  titleJp     String   @map("title_jp") @db.VarChar(255)
  titleEn     String   @map("title_en") @db.VarChar(255)
  startPrompt String   @map("start_prompt") @db.Text 
  category    String?  @db.VarChar(50)
  imageUrl    String?  @map("image_url") // New: For UI thumbnails

  conversations Conversation[]
  @@map("Topic")
}

// 5. Conversation (Tracks a single chat session)
model Conversation {
  id           Int       @id @default(autoincrement()) @map("conversation_id")
  userId       Int       @map("user_id")
  topicId      Int       @map("topic_id")
  languageUsed String    @map("language_used") @db.VarChar(5)
  startedAt    DateTime  @default(now()) @map("started_at") @db.Timestamp(0)
  endedAt      DateTime? @map("ended_at") @db.Timestamp(0)

  user     User      @relation(fields: [userId], references: [id], onDelete: Cascade)
  topic    Topic     @relation(fields: [topicId], references: [id])
  messages Message[]

  @@index([userId])
  @@map("Conversation")
}

// 6. Message (Chat Transcript + AI Feedback)
model Message {
  id             Int           @id @default(autoincrement()) @map("message_id")
  conversationId Int           @map("conversation_id")
  sender         MessageSender @default(USER)
  content        String        @db.Text
  timestamp      DateTime      @default(now()) @db.Timestamp(0)

  // AI Feedback Fields (New: For "Review" screen)
  correction     String?       @db.Text // The corrected sentence from AI
  explanation    String?       @db.Text // Grammar explanation
  isBookmarked   Boolean       @default(false) // If user wants to save this expression

  conversation Conversation @relation(fields: [conversationId], references: [id], onDelete: Cascade)

  @@index([conversationId]) 
  @@map("Message")
}

enum MessageSender {
  USER
  AI
}